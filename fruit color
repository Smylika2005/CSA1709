class FruitColor:
    def __init__(self):
        self.fruit_colors = {
            'apple': 'red',
            'banana': 'yellow',
            'grape': 'purple',
            'orange': 'orange',
            'lemon': 'yellow'
        }

    def find_color(self, fruit):
        return self.fruit_colors.get(fruit, 'Unknown fruit')

# Example usage
fc = FruitColor()
print(fc.find_color('apple'))  # Output: red
print(fc.find_color('kiwi'))   # Output: Unknown fruit
